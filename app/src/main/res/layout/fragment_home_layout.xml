<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:background="@color/colorWhite"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsv_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/lly_boot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">


                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="180px"
                                android:background="@color/color4C4C4C" />

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="vertical"
                                android:paddingTop="120px">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="请扫描当前便利架上的二维码"
                                    android:textColor="@color/color202020"
                                    android:textSize="32px" />

                                <com.zhy.autolayout.AutoLinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="30px"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="当前便利架 :"
                                        android:textColor="@color/color202020"
                                        android:textSize="30px" />

                                    <TextView
                                        android:id="@+id/tv_scan_result"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/colorFBE7EF"
                                        android:text="还没有扫描便利架"
                                        android:textColor="@color/colorA50020"
                                        android:textSize="30px" />


                                </com.zhy.autolayout.AutoLinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="80px"
                                    android:layout_marginTop="30px"
                                    android:text="公司还没安装便利架？"
                                    android:textColor="@color/color202020"
                                    android:textSize="28px" />

                                <ImageView
                                    android:id="@+id/img_mianfeianzhuang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="30px"
                                    android:layout_marginLeft="80px"
                                    android:layout_marginTop="30px"
                                    android:src="@drawable/home_mianfei_az_icon" />
                            </com.zhy.autolayout.AutoLinearLayout>


                        </com.zhy.autolayout.AutoLinearLayout>

                        <ImageView
                            android:id="@+id/img_saoyisao"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="90px"
                            android:src="@drawable/home_saoyisao_icon" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120px"
                            android:layout_marginRight="-20px"
                            android:layout_marginTop="60px"
                            android:layout_toLeftOf="@+id/img_saoyisao"
                            android:src="@drawable/home_yc_icon" />

                    </com.zhy.autolayout.AutoRelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10px"
                        android:background="@color/colorE5E5E5" />
                    <com.zhy.autolayout.AutoRelativeLayout
                        android:id="@+id/rly_tuijian"
                       android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="360px"
                        android:background="@drawable/home_special_bg_icon"
                       >
                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="80px"
                            android:layout_marginRight="80px"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/home_special_icon" />
                            <Gallery
                                android:id="@+id/gl_goods"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </Gallery>

                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoRelativeLayout>




                    <com.lm.base.library.widget.flybanner.FlyBanner
                        android:id="@+id/fb_roll"

                        android:layout_width="match_parent"
                        android:layout_height="200px">

                    </com.lm.base.library.widget.flybanner.FlyBanner>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10px"
                        android:background="@color/colorE5E5E5" />

                    <ImageView
                        android:id="@+id/img_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="60px"
                        android:layout_marginTop="35px"
                        android:src="@drawable/home_all_goods_icon"
                        />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30px"
                        android:layout_marginTop="30px"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <EditText
                                android:id="@+id/et_search"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3.5"
                                android:singleLine="true"
                                android:background="#F2F2F2"
                                android:hint="请输入商品名称进行搜索"
                                android:paddingBottom="10px"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:paddingTop="10px"
                                android:textColor="@color/color999999"
                                android:textSize="26px" />

                            <ImageView
                                android:id="@+id/img_search"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/search" />
                        </com.zhy.autolayout.AutoLinearLayout>

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/lly_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rc_goods_type"
                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_weight="2">


                        </android.support.v7.widget.RecyclerView>


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rc_goods_list"
                            android:layout_width="0dp"

                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:overScrollMode="never">


                        </android.support.v7.widget.RecyclerView>


                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>