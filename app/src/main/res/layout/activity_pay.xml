<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <com.ycblsc.utils.CustomNestRadioGroup
            android:id="@+id/rad_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rela_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px">

                <RadioButton
                    android:id="@+id/rad_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蚁巢会员支付"
                    android:checked="true"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_payment_balance"
                    android:layout_width="300px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="默认支付方式"
                    android:textColor="@color/colorWhite" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/lin_banele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前余额："
                    android:textColor="@color/click_bg" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.0"
                    android:textColor="@color/colorPrimaryDark" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="60px">

                <RadioButton
                    android:id="@+id/rad_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cart_wechat"
                    android:drawablePadding="20px"
                    android:text="微信支付"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_payment_weixin"
                    android:layout_width="300px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@color/shape_bg"
                    android:gravity="center"
                    android:text="设置默认支付方式"
                    android:textColor="@color/color202020" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="60px">

                <RadioButton
                    android:id="@+id/rad_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cart_alipay"
                    android:drawablePadding="10px"
                    android:text="支付宝支付"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_payment_zhifubao"
                    android:layout_width="300px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@color/shape_bg"
                    android:gravity="center"
                    android:text="设置默认支付方式"
                    android:textColor="@color/color202020" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.ycblsc.utils.CustomNestRadioGroup>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100px"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_determine"
                android:layout_width="300px"
                android:layout_height="70px"
                android:layout_gravity="center"

                android:layout_marginBottom="20px"
                android:background="@drawable/shape_login2_bg"
                android:text="确定"
                android:textColor="@color/colorWhite"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</layout>
