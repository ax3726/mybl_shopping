<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginTop="20px"
            android:src="@drawable/ic_logo_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginTop="20px"
            android:text="新建收货地址：" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:orientation="horizontal">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorE7E7E7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvProvince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="5px"
                        android:text="—请选择省—"
                        android:textColor="@color/colorBlack" />

                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/ic_drop_address_down" />

            </com.zhy.autolayout.AutoLinearLayout>

            <!--选择市-->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:orientation="horizontal">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorE7E7E7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="5px"
                        android:text="—请选择市—"
                        android:textColor="@color/colorBlack" />

                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/ic_drop_address_down" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--选择县-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/linCounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:orientation="horizontal">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorE7E7E7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCounty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="5px"
                        android:text="—请选择县—"
                        android:textColor="@color/colorBlack" />

                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/ic_drop_address_down" />

            </com.zhy.autolayout.AutoLinearLayout>

            <EditText
                android:id="@+id/etName"
                android:layout_width="300px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:background="@color/colorE7E7E7"
                android:hint="请输入姓名"
                android:maxLength="6"
                android:paddingLeft="20px"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/background"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="300px"
            android:layout_height="60px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="50px"
            android:background="@color/colorE7E7E7"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="20px"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/background"
            android:textSize="30px" />

        <EditText
            android:id="@+id/edDetails"
            android:layout_width="500px"
            android:layout_height="150px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="50px"
            android:background="@color/colorE7E7E7"
            android:gravity="left"
            android:hint="请输入详情地址及门牌号"
            android:paddingLeft="20px"
            android:paddingTop="10px"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/background"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/imgConfierm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100px"
            android:src="@drawable/ic_preser_vation" />

    </com.zhy.autolayout.AutoLinearLayout>
</layout>
