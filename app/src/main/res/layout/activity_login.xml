<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rly_boot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:src="@drawable/login_yc_icon" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="400px"
                android:layout_height="60px"
                android:inputType="phone"
                android:layout_marginTop="80px"
                android:background="@drawable/shape_edittext"
                android:hint="账号"
                android:paddingLeft="20px"
                android:textColor="@color/color202020"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="400px"
                android:layout_height="60px"
                android:inputType="textPassword"
                android:layout_marginTop="30px"
                android:background="@drawable/shape_edittext"
                android:hint="密码"
                android:paddingLeft="20px"
                android:textColor="@color/color202020"
                android:textSize="30px" />

            <Button
                android:id="@+id/btn_login_in"
                android:layout_width="400px"
                android:layout_height="80px"
                android:layout_marginTop="30px"
                android:text="会员登录"
                android:textSize="34px"
                android:textColor="@color/colorBlack"
                android:background="@drawable/shape_login1_bg"

                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34px"
                    android:text="注  册"
                    android:textColor="@color/colorBlack"
                    />
                <View
                    android:layout_width="4px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_height="34px"
                    android:background="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/tv_retrievePwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34px"
                    android:text="忘记密码"
                    android:textColor="@color/colorBlack"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/btn_login_youke"
                android:layout_width="400px"
                android:layout_height="80px"
                android:layout_marginTop="40px"
                android:text="游客试用"
                android:textSize="34px"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_login2_bg"

                />


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</layout>
