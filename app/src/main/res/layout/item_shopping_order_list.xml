<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/colorF7F7F7" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="50px"
        android:paddingTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时达订单:"
            android:textColor="#514D4D"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时"
            android:textColor="#C4BEBE"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:layout_marginRight="4px"
            android:text="15"
            android:textColor="@color/colorBlack"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分钟"
            android:textColor="#C4BEBE"
            android:textSize="32px" />
    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="100px">

        <ImageView
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_marginRight="40px"
            android:src="@drawable/shopping_cart_choose_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户下单 :"
            android:textColor="#1F1F1F"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="2017-11-23 10:30"
            android:textColor="#ACA7A7"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="100px">

        <ImageView
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_marginRight="40px"
            android:src="@drawable/shopping_cart_choose_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蚁巢发货 :"
            android:textColor="#1F1F1F"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="2017-11-23 10:30"
            android:textColor="#ACA7A7"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40px"
        android:paddingLeft="178px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户签收 :"
            android:textColor="#1F1F1F"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/img_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80px"
            android:src="@drawable/order_list_ok_icon" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/colorF7F7F7" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_ok_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="100px"
        android:paddingTop="20px">

        <ImageView
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_marginRight="40px"
            android:src="@drawable/shopping_cart_choose_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户签收 :"
            android:textColor="#1F1F1F"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_ok_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="2017-11-23 10:30"
            android:textColor="#ACA7A7"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_pay_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40px"
        android:paddingLeft="100px">

        <ImageView
            android:layout_width="38px"
            android:layout_height="38px"
            android:layout_marginRight="40px"
            android:src="@drawable/shopping_cart_choose_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超时赔付 :"
            android:textColor="#1F1F1F"
            android:textSize="26px" />

        <TextView
            android:id="@+id/tv_pay_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="2017-11-23 10:30"
            android:textColor="#ACA7A7"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/colorF7F7F7" />
</com.zhy.autolayout.AutoLinearLayout>